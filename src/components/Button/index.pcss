@value colors: '../../styles/variables/colorVariables.pcss';
@value accent, accent-light, subordinate-light, secondary,  white from colors;

@value spaces: '../../styles/variables/spaceVariables.pcss';
@value space-xs, space-s, space-m from spaces;

.button {
  composes: mobile-button from "../../styles/fonts.pcss";
  padding: 0;
  color: inherit;
  border: none;
  cursor: pointer;
  background-color: transparent;
}

.accentLight {
  color: accent;
  background-color: accent-light;
}

.accent {
  color: white;
  background-color: accent;
}

.subordinate {
  color: secondary;
  background-color: subordinate-light;
}

.accent,
.subordinate,
.accentLight {
  composes: xxl-border-radius from "../../styles/borders.pcss";
  border: none;
  padding: space-xs space-m;
}
