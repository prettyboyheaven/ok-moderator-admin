.filtersList {
  display: grid;
  width: 100%;
  grid-template-columns: repeat(4, min-content);
  overflow-y: auto;
  grid-gap: 15px;
}

.filter {
  color: #999;
  padding-bottom: 10px;
  margin-bottom: 25px;
  white-space: nowrap;
}

.activeFilter {
  color: #333;
  border-bottom: 1px solid #ee8208;
}
