@value colors: '../../styles/variables/colorVariables.pcss';
@value primary, subordinate-medium, subordinate from colors;

@value spaces: '../../styles/variables/spaceVariables.pcss';
@value space-s from spaces;

@value fonts: '../../styles/variables/fontSizeVariables.pcss';
@value font-xs, font-s from fonts;

@value border-radiuses: '../../styles/variables/borderRadiusVariables.pcss';
@value border-radius-xs from border-radiuses;

.container {
    position: relative;
}

.title {
    composes: title from "../../styles/content.pcss";
}

.textarea {
    box-sizing: border-box;
    border: 1px solid subordinate-medium;
    border-radius: border-radius-xs;
    color: subordinate;
    font-size: font-s;
    padding: 7px;
    resize: none;
    width: 100%;
}

.textarea::placeholder {
    color: subordinate;
}

.charactersLeft {
    position: absolute;
    right: 7px;
    bottom: 7px;
    color: subordinate;
    font-size: font-xs;
}


